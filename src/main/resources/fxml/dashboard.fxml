<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronixedu.hub.controller.DashboardController"
            styleClass="dashboard-container"
            prefWidth="800"
            prefHeight="600">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Text text="HERONIX HUB" styleClass="dashboard-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="welcomeLabel" styleClass="welcome-label"/>

            <!-- Server Status Indicator -->
            <HBox alignment="CENTER" spacing="5" styleClass="status-indicator-container">
                <Circle fx:id="serverStatusIndicator" radius="6" styleClass="status-indicator"/>
                <Label fx:id="serverStatusLabel" text="Checking..." styleClass="status-indicator-label"/>
            </HBox>

            <Button fx:id="adminPanelButton"
                    text="Admin Panel"
                    onAction="#handleAdminPanel"
                    styleClass="admin-button"
                    visible="false"/>

            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#handleLogout"
                    styleClass="logout-button"/>
        </HBox>
    </top>

    <!-- Center - Product Tiles -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
            <VBox alignment="TOP_CENTER" spacing="20">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Category Filter Bar -->
                <HBox fx:id="categoryFilterBar" alignment="CENTER" spacing="10" styleClass="category-filter-bar">
                    <Label text="Filter:" styleClass="filter-label"/>
                    <ComboBox fx:id="categoryFilter" promptText="All Applications" prefWidth="200"/>
                    <TextField fx:id="searchField" promptText="Search applications..." prefWidth="200"/>
                    <Button fx:id="refreshButton" text="↻" onAction="#handleRefresh" styleClass="refresh-button"/>
                </HBox>

                <!-- Heronix Products Section -->
                <VBox fx:id="heronixProductsSection" spacing="15">
                    <Text text="Heronix Education Suite" styleClass="section-title"/>
                    <FlowPane fx:id="productTilesContainer"
                              alignment="CENTER"
                              hgap="20"
                              vgap="20"
                              prefWrapLength="700">
                    </FlowPane>
                </VBox>

                <!-- Third-Party Applications Section -->
                <VBox fx:id="thirdPartyAppsSection" spacing="15">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="Installed Applications" styleClass="section-title"/>
                        <Label fx:id="thirdPartyCountLabel" text="" styleClass="count-badge"/>
                    </HBox>
                    <FlowPane fx:id="thirdPartyTilesContainer"
                              alignment="CENTER"
                              hgap="20"
                              vgap="20"
                              prefWrapLength="700">
                    </FlowPane>
                </VBox>

                <!-- No Products Message -->
                <VBox fx:id="noProductsMessage"
                      alignment="CENTER"
                      spacing="10"
                      visible="false">
                    <Text text="No applications available" styleClass="info-text"/>
                    <Text text="Contact your IT administrator to request applications" styleClass="info-subtext"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Bar -->
    <bottom>
        <HBox styleClass="bottom-bar" alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Text text="© 2025 Heronix Education Systems LLC" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
